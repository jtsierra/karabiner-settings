{
	"title": "Personal Hyper Key",
	"rules": [
		{
			"description": "Caps Lock to Hyper Key (Ctrl+Option+Shift+Cmd)",
			"manipulators": [
				{
					"description": "Caps Lock -> Hyper Key",
					"from": {
						"key_code": "caps_lock",
						"modifiers": {
							"optional": ["any"]
						}
					},
					"to": [
						{
							"set_variable": {
								"name": "hyper",
								"value": 1
							}
						}
					],
					"to_after_key_up": [
						{
							"set_variable": {
								"name": "hyper",
								"value": 0
							}
						}
					],
					"to_if_alone": [
						{
							"key_code": "escape"
						}
					],
					"type": "basic"
				}
			]
		},
		{
			"description": "Hyper Key + T -> Open Terminal",
			"manipulators": [
				{
					"description": "Open Terminal",
					"from": {
						"key_code": "t",
						"modifiers": {
							"optional": ["any"]
						}
					},
					"to": [
						{
							"shell_command": "open -a 'Terminal.app'"
						}
					],
					"conditions": [
						{
							"type": "variable_if",
							"name": "hyper",
							"value": 1
						}
					],
					"type": "basic"
				}
			]
		},
		{
			"description": "Hyper Key + C -> Open Chrome",
			"manipulators": [
				{
					"description": "Open Chrome",
					"from": {
						"key_code": "c",
						"modifiers": {
							"optional": ["any"]
						}
					},
					"to": [
						{
							"shell_command": "open -a 'Google Chrome.app'"
						}
					],
					"conditions": [
						{
							"type": "variable_if",
							"name": "hyper",
							"value": 1
						}
					],
					"type": "basic"
				}
			]
		},
		{
			"description": "Hyper Key + F -> Open Finder",
			"manipulators": [
				{
					"description": "Open Finder",
					"from": {
						"key_code": "f",
						"modifiers": {
							"optional": ["any"]
						}
					},
					"to": [
						{
							"shell_command": "open -a 'Finder.app'"
						}
					],
					"conditions": [
						{
							"type": "variable_if",
							"name": "hyper",
							"value": 1
						}
					],
					"type": "basic"
				}
			]
		}
	]
}
